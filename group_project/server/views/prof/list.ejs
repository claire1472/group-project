<%- include('../partials/Header.ejs') %>
<%- include('../partials/Site_Header.ejs') %>
<a href="/proflist/add" class="btn btn-primary mb-3" role="button">
    <i class="fas fa-plus-circle"></i> Add Task
</a>

<table class="table table-bordered table-striped table-hover">
    <tr class="d-flex">
        <th class="text-center col-2">Name</th>
        <th class="text-center col-2">Priority</th>
        <th class="text-center col-4">Notes</th>
    </tr>
    <% profList.forEach(prof => { %>
        <tr class="d-flex">
            <td class="text-center col-2"><%= prof.Name %></td>
            <td class="text-center col-2"><%= prof.Priority %></td>
            <td class="text-center col-4"><%= prof.Notes %></td>
            <td class="text-center col-1">
                <button class="btn" onclick="window.location.href='/proflist/edit/<%= prof._id %>'">Edit</button>
            </td>
            <td class="text-center col-1">
                <button data-href="/proflist/delete/<%= prof._id %>" class="btn" onclick="return confirmDelete('<%= prof.Priority %>')">Delete</button>
                    <script>
                        function confirmDelete(profid) {
                            var result = confirm("Are you sure you want to delete this entry?");
                            if (result) {
                                var element = document.activeElement;
                                var href = element.getAttribute('data-href');
                                window.location.href = href;
                            }
                        }
                    </script>
            </td>
        </tr>
    <% }); %>
</table>

<%- include('../partials/Site-Footer.ejs') %>
<%- include('../partials/Footer.ejs') %>